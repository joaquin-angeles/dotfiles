# Preview and cleaner
set preview true
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Options
set drawbox true
set sixel true

# Custom functions
cmd open ${{
    if (command -v bat >/dev/null 2>&1 && bat "$f" > /dev/null 2>&1) || cat "$f" > /dev/null 2>&1; then
        nvim "$f"
    else
        case $(file --mime-type "$f" -bL) in
            application/x-executable) "$f" ;;
            *) xdg-open "$f" ;;
        esac
    fi
}}
cmd mkdir ${{
    printf "directory name: "
    read ans
    mkdir $ans
}}
cmd touch ${{
    printf "file name: "
    read ans
    $EDITOR $ans
}}

# Keymaps and options
map . set hidden!
map <esc> quit
map D delete
map p paste
map x cut
map y copy
map a push $touch<space>
map A push $mkdir<space>
map <enter> open
map r rename
map H top
map L bottom
map R reload
map U clear
map u unselect
