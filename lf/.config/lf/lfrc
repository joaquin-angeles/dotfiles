# Preview and cleaner
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Sixel support
set sixel true

# Custom functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        application/x-executable) "$f";;
        *) xdg-open "$f" ;;
    esac
}}

# Keymaps
map . set hidden!
map D delete
map p paste
map x cut
map y copy
map a push $touch<space>
map A push $mkdir<space>-p<space>
map E $nvim "$f"
map <enter> open
map r rename
map H top
map L bottom
map R reload
map U clear
map u unselect
