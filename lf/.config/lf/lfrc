# Preview and cleaner
set preview true
set previewer ~/.config/lf/preview
set cleaner ~/.config/lf/cleaner

# Sixel support
set sixel true

# Options
set drawbox true

# Custom functions
cmd open ${{
    if (command -v bat >/dev/null 2>&1 && bat "$f" > /dev/null 2>&1) || cat "$f" > /dev/null 2>&1; then
        nvim "$f"
    else
        case $(file --mime-type "$f" -bL) in
            application/x-executable) "$f" ;;
            *) xdg-open "$f" ;;
        esac
    fi
}}

# Keymaps and options
map . set hidden!
map E $nautilus "$(realpath)" >/dev/null 2>&1 &
map D delete
map p paste
map x cut
map y copy
map n push $touch<space>
map N push $mkdir<space>-p<space>
map <enter> open
map r rename
map H top
map L bottom
map R reload
map U clear
map u unselect
