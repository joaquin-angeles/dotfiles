* {
    font: "Rubik 13.5";
    text-color: #eeeeee;
    foreground: #865054;
    g-spacing: 10px;
    g-margin: 0;
    b-color: #1e1e20;
    fg-color: #3f4044;
    fgp-color: #888888FF;
    hl-color: transparent;
    hlt-color: #eeeeee;
    alt-color: #444444CC;
    wbg-color: #1e1e20;
    w-border: 2px solid;
    w-border-color: #eeeeee;
    w-padding: 12px;
}

configuration {
    modi: "drun";
    show-icons: false;
    display-drun: "Applications:";
    display-emoji: "Emojis:";
}

listview {
    columns: 1;
    spacing: 6px;
    lines: 7;
    fixed-height: true;
    fixed-columns: false;
    scrollbar: false;
    cycle: false;
    border: 0px solid;
    layout: "vertical";
}

window {
    transparency: "real";
    width: 550px;
    height: 550px;
    border-radius: 12px;
    background-color: @wbg-color;
    border: 2px solid;
    border-color: #3f4044;
    padding: 8px;
}

prompt {
    text-color: #eeeeee;
}

inputbar {
    children: ["prompt", "entry"];
    spacing: @g-spacing;
    padding: 14px 16px;
    border-radius: 24px;
    border: 2px solid;
    border-color: #757575;
    background-color: #262628;
}

entry {
    placeholder: "";
    placeholder-color: #555555;
    text-color: #eeeeee;
}

mainbox {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: 8px;
    children: ["inputbar", "listview", "message"];
}

element {
    spacing: @g-spacing;
    margin: @g-margin;
    padding: 8px;
}

element normal.normal {
    background-color: transparent;
    text-color: @fg-color;
}

element alternate.normal {
    background-color: transparent;
    text-color: @fg-color;
}

element selected.active {
    background-color: @hl-color;
    text-color: @hlt-color;
}

element selected.normal {
    background-color: @hl-color;
    text-color: @hlt-color;
}

message {
    border: 8px solid;
    text-color: #865054;
}
