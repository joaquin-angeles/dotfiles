{
    "hyprland/window": {
        "max-length": 64,
        "format": "{}"
    },
    
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": "",
            "default": ""
        },
    },

    "network": {
        "format": "{icon}",
        "format-icons": [
            "󰤟", "󰤢", "󰤥", "󰤨" 
        ],
        "format-disconnected": "󰤭",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "interface": "wlan0",
        "on-click": "foot -e impala"
    },

    "bluetooth": {
        "format": "{icon}",
        "format-icons": [ "󰂲", "󰂯" ],
        "format-connected": "󰂯",
        "format-disconnected": "󰂲",
        "format-disabled": "󰂲",
        "tooltip-format": "Active",
        "tooltip-format-disabled": "Inactive",
        "tooltip-format-connected": "{device_alias} ({device_battery_percentage}%)",
        "tooltip-format-enumerate-connected": "{device_alias} ({device_battery_percentage}%)",
        "on-click": "blueman-manager"
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "󰖁",
        "format-icons": {
            "headphones": "󰋋",
            "headset": "󰋋",
            "headset-muted": "󰋋",
            "default": [
                "󰝟",
                "󰖀",
                "󰕾"
            ]
        },
        "on-click": "foot -e wiremix",
        "tooltip-format": "Volume ({volume}%)"
    },

    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ],
        "format-full": "󱈑 {capacity}%",
        "format-charging": "󰂄 {capacity}%",
        "format-warning": "󰂃 {capacity}%",
        "tooltip": true,
        "tooltip-format": "Discharging",
        "tooltip-format-charging": "Charging",
        "tooltip-format-full": "Full"
    },

    "custom/clipboard": {
        "format": "",
        "on-click": "cliphist list | rofi -dmenu -p 'Clipboard history:' | cliphist decode | wl-copy",
        "tooltip": true,
        "tooltip-format": "Clipboard history"
    },

    "clock": {
        "format": "[ {:%d.%m.%y  %I:%M %p} ]",
        "tooltip": true,
        "tooltip-format": "{:%A}"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 6,
    },

    "custom/power": {
        "format": "󰐥",
        "tooltip": true,
        "tooltip-format": "Power menu",
        "on-click": "~/.config/scripts/power-menu"
    },
    "custom/menu": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "drun",
        "on-click": "tofi-drun"
    },
    "backlight": {
        "format": "{icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "interval": 2,
        "on-click": "hyprsunset -t 3750",
        "on-scroll-up": "brightnessctl s +5%",
        "on-scroll-down": "brightnessctl s 5%-",
        "tooltip": true,
        "tooltip-format": "Current brightness: {percent}%"
    }
}
