{
    "hyprland/window": {
        "max-length": 64,
        "format": "{}"
    },

    "group/system": {
        "orientation": "horizontal",
        "modules": [ "network", "bluetooth", "pulseaudio", "battery" ]
    },

    "group/systray": {
        "orientation": "horizontal",
        "modules": [ "tray", "custom/clipboard" ]
    },

    "network": {
        "format": "{icon}",
        "format-icons": [
            "󰤠", "󰤢", "󰤥", "󰤨" 
        ],
        "format-disconnected": "󰤭",
        "on-click": "~/.config/scripts/wifi-menu",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "interface": "wlan0"
    },

    "bluetooth": {
        "format": "{icon}",
        "format-icons": "󰂯",
        "format-connected": "󰂯",
        "format-disconnected": "󰂲",
        "format-disabled": "󰂲",
        "tooltip-format": "Disconnected (on)",
        "tooltip-format-disabled": "Disconnected (off)",
        "tooltip-format-connected": "{device_alias} ({device_battery_percentage}%)",
        "tooltip-format-enumerate-connected": "{device_alias} ({device_battery_percentage}%)",
        "on-click": "blueman-manager"
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "󰖁",
        "format-icons": {
            "headphones": "󰋋",
            "headset": "󰋋",
            "headset-muted": "󰋋",
            "default": [
                "󰝟",
                "󱄡",
                "󰖀",
                "󰕾"
            ]
        },
        "on-click": "pavucontrol",
        "tooltip-format": "Volume ({volume}%)"
    },

    "battery": {
        "format": "{icon}",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ],
        "format-charging": "󰂄",
        "format-full": "󱟢",
        "format-warning": "󰂃",
        "tooltip": true,
        "tooltip-format": "Discharging ({capacity}%)",
        "tooltip-format-charging": "Charging ({capacity}%)",
        "tooltip-format-full": "Full ({capacity}%)"
    },

    "custom/clipboard": {
        "format": "",
        "on-click": "cliphist list | rofi -dmenu -p 'Clipboard history:' | cliphist decode | wl-copy",
        "tooltip": true,
        "tooltip-format": "Clipboard history"
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "on-click": "rofi -disable-history -show drun",
        "tooltip": true,
        "tooltip-format": "{:%d %B, %Y on a %A}"
    },

    "tray": {
        "icon-size": 19,
        "spacing": 9
    },

    "custom/power": {
        "format": "󰐥",
        "tooltip": true,
        "tooltip-format": "Power menu",
        "on-click": "~/.config/scripts/power-menu"
    },

    "backlight": {
        "format": "{icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "interval": 2,
        "on-click": "hyprsunset -t 3750",
        "on-scroll-up": "brightnessctl s +5%",
        "on-scroll-down": "brightnessctl s 5%-",
        "tooltip": true,
        "tooltip-format": "Current brightness: {percent}%"
    }
}
