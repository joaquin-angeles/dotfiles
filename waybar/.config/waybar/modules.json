{
    "hyprland/window": {
        "max-length": 64
    },

    "network": {
        "format": "{icon}",
        "format-icons": [
            "󰤠", "󰤢", "󰤥", "󰤨" 
        ],
        "format-disconnected": "󰤭",
        "on-click": "~/.config/waybar/scripts/wifi-menu",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "interface": "wlan0"
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "󰖁",
        "format-icons": {
            "headphones": "",
            "headset": "󱡏",
            "default": [
                "󰝟",
                "󰖀",
                "󰝝",
                "󰕾"
            ]
        },
        "on-click": "GTK_THEME=JQN-Mono pavucontrol",
        "tooltip-format": "Volume ({volume}%)"
    },

    "battery": {
        "format": "{icon}",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ],
        "format-charging": "󰂄",
        "format-warning": "󰂃",
        "tooltip": true,
        "tooltip-format": "Discharging ({capacity}%)",
        "tooltip-format-charging": "Charging ({capacity}%)",
        "tooltip-format-full": "Full ({capacity}%)"
    },

    "custom/space": {
        "format": "•",
        "tooltip": false
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "on-click": "rofi -disable-history -show drun",
        "tooltip": true,
        "tooltip-format": "{:%d %B, %Y on a %A}"
    },

    "tray": {
        "icon-size": 20,
        "spacing": 14
    },

    "custom/power": {
        "format": "󰐥",
        "tooltip": true,
        "tooltip-format": "Power menu (wlogout)",
        "on-click": "wlogout"
    },

    "custom/menu": {
        "format": "󰍜",
        "on-click": "rofi -disable-history -show drun"
    },

    "backlight": {
        "format": "{icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "interval": 2,
        "on-click": "hyprsunset -t 3750",
        "on-scroll-up": "brightnessctl s +5%",
        "on-scroll-down": "brightnessctl s 5%-",
        "tooltip": true,
        "tooltip-format": "Current brightness: {percent}%"
    }
}
