{
    "network": {
        "format-wifi": "󰖩",
        "format-disconnected": "󰖪",
        "on-click": "iwgtk",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "interface": "wlan0"
    },

    "hyprland/window": {
        "max-length": 64
    },

    "custom/space": {
        "format": "•"
    },

    "battery": {
        "format": "{icon}",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ],
        "format-charging": "󰂄",
        "format-warning": "󰂃",
        "tooltip": true,
        "tooltip-format": "Battery ({capacity}%)"
    },

    "custom/space": {
        "format": "•"
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-icons": ["󰝟", "󰕿", "󰖀", "󰕾"],
        "format-muted": "󰝟",
        "on-click": "pavucontrol",
        "tooltip-format": "Volume ({volume}%)"
    },

    "custom/space": {
        "format": "•"
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip": true,
        "tooltip-format": "{:%A, %B %d %Y}"
    },

    "custom/space": {
        "format": "•"
    },

    "tray": {
        "icon-size": 19,
        "spacing": 11
    },

    "custom/space": {
        "format": "•"
    },

    "custom/power": {
        "format": "󰐥",
        "tooltip": true,
        "tooltip-format": "Power menu (wlogout)",
        "on-click": "wlogout"
    },

    "custom/space": {
        "format": "•"
    },

    "custom/menu": {
        "format": "<span size='large'>\uf303</span>",
        "on-click": "rofi -disable-history -show drun"
    },

    "custom/space": {
        "format": "•"
    },

    "backlight": {
        "format": "{icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "interval": 2,
        "on-click": "hyprsunset -t 3750",
        "on-scroll-up": "brightnessctl s +5%",
        "on-scroll-down": "brightnessctl s 5%-",
        "tooltip": true,
        "tooltip-format": "Current brightness: {percent}%"
    }
}
