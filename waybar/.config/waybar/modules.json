{
    "network": {
        "format-wifi": "󰖩",
        "format-disconnected": "󰖪",
        "on-click": "~/.config/waybar/scripts/wifi-menu",
        "tooltip-format": "{essid} ({signalStrength}%)",
        "interface": "wlan0"
    },

    "battery": {
        "format": "{icon}",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ],
        "format-charging": "󰂄",
        "format-warning": "󰂃",
        "tooltip": true,
        "tooltip-format": "Discharging ({capacity}%)",
        "tooltip-format-charging": "Charging ({capacity}%)",
        "tooltip-format-full": "Full ({capacity}%)"
    },

    "custom/space": {
        "format": "•"
    },

    "custom/fm": {
        "format": "󰉋",
        "on-click": "nemo",
        "tooltip": true,
        "tooltip-format": "File Manager (Nemo)"
    },

    "custom/web": {
        "format": "",
        "on-click": "zen-browser",
        "tooltip": true,
        "tooltip-format": "Web Browser (Zen)"
    },

    "custom/games": {
        "format": "",
        "on-click": "lutris",
        "tooltip": true,
        "tooltip-format": "Game Hub (Lutris)"
    },

    "custom/terminal": {
        "format": "󰆍",
        "on-click": "kitty",
        "tooltip": true,
        "tooltip-format": "Terminal (kitty)"
    },

    "pulseaudio": {
        "format": "{icon}",
        "format-muted": "󰝟",
        "format-icons": {
            "headphones": "",
            "headset": "󱡏",
            "default": [
                "󰕿",
                "󰖀",
                "󰖀",
                "󰕾"
            ]
        },
        "on-click": "pavucontrol",
        "tooltip-format": "Volume ({volume}%)"
    },

    "clock": {
        "format": "{:%I:%M %p}",
        "tooltip": true,
        "tooltip-format": "{:%A}"
    },

    "tray": {
        "icon-size": 19,
        "spacing": 11
    },

    "custom/power": {
        "format": "󰐥",
        "tooltip": true,
        "tooltip-format": "Power menu (wlogout)",
        "on-click": "wlogout"
    },

    "custom/menu": {
        "format": "󰣇",
        "on-click": "rofi -disable-history -show drun"
    },

    "backlight": {
        "format": "{icon}",
        "format-icons": ["󰃞", "󰃝", "󰃟", "󰃠"],
        "interval": 2,
        "on-click": "hyprsunset -t 3750",
        "on-scroll-up": "brightnessctl s +5%",
        "on-scroll-down": "brightnessctl s 5%-",
        "tooltip": true,
        "tooltip-format": "Current brightness: {percent}%"
    }
}
