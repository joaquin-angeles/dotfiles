{
    "include": "~/.config/waybar/modules.json",
    "layer": "top",
    "position": "top",
    "height": 36,
    "width": 1900,
    "margin": "8 0 0 0",
    "spacing": 4,
    "modules-left": [
        "clock",
        "custom/space",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "tray",
        "group/system",
        "custom/space",
        "custom/power"
    ],
    "group/system": {
        "orientation": "horizontal",
        "modules": [ "network", "bluetooth", "pulseaudio", "battery" ]
    },
}
